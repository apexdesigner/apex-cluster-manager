{
  name: 'Postgres',
  repo: {
	name: 'bitnami',
	url: 'https://charts.bitnami.com/bitnami'
  },
  chart: 'bitnami/postgresql',
  parameters: [
	{
	  name: 'name',
	  type: 'Name',
	  isRequired: true,
	  default: 'postgres'
	},
	{
	  name: 'port',
	  type: 'Port',
	  isRequired: true
	},
	{
	  name: 'password',
	  type: 'Password',
	  valueFrom: 'manifests.Secret.${releaseName}-postgresql.data.postgres-password'
	}
  ],
  valuesTemplate: {
	primary: {
	  service: {
		nodePorts: {
		  postgresql: '${port}'
		},
		type: 'NodePort'
	  }
	}
  }
}
